<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doodles"
    tools:context="com.example.proyek.proyekbesar.MainActivity">

    <ImageView
        android:id="@+id/bendera"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pikachu"/>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/bendera"
        android:layout_below="@+id/bendera"
        android:layout_marginTop="19dp"
        android:background="#ff1500"
        android:text="AYO MAIN" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/bendera"
        android:layout_alignTop="@+id/button"
        android:background="#ff9900"
        android:text="SELFIE" />

    <Button
        android:id="@+id/button3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="11dp"
        android:background="#4cff00"
        android:text="PETUNJUK" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:background="#00bbff"
        android:text="KIRIM SOAL" />


</RelativeLayout>
